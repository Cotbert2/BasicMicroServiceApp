FROM nginx:alpine

# Copiar los archivos ya construidos al contenedor
COPY smart-store/dist/smart-store/browser /usr/share/nginx/html

# Crear una configuración básica de nginx para Angular
RUN echo 'server { \
    listen 80; \
    server_name localhost; \
    location / { \
        root /usr/share/nginx/html; \
        index index.html index.htm; \
        try_files $uri $uri/ /index.html; \
    } \
    error_page 500 502 503 504 /50x.html; \
    location = /50x.html { \
        root /usr/share/nginx/html; \
    } \
}' > /etc/nginx/conf.d/default.conf

EXPOSE 80

